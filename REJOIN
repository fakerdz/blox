local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer

-- Cấu hình
local folderPath = "faker/"
local filePath = folderPath .. LocalPlayer.Name .. ".txt"
local bloxFruitsUniverseID = 2753915549 -- UniverseId của Blox Fruits
local function isInBloxFruits()
    return game.GameId == bloxFruitsUniverseID
end

local maxJumps = 5
local minBloxTime, maxBloxTime = 7200, 18000
local minGameTime, maxGameTime = 60, 300
local checkRadius = 30
local positionCheckDelay = 180
local checkDelay = 10
local lastPosition, timeStuck = nil, 0
local jumpCount, lastAFKTime, totalPlayTime, currentCycleJumps = 0, os.clock(), 0, 0
local stuckCount = 0
local currentGameID = game.PlaceId

-- Danh sách game hot
local popularGameIDs = {
    2753915549, -- Blox Fruits
    6516141723, -- DOORS
